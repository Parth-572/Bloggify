<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <style>
      body,
      h1,
      p,
      img,
      nav,
      ul,
      li,
      a {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Roboto", sans-serif;
        background-color: #f4f4f4;
        color: #333;
        line-height: 1.6;
      }

      nav {
        background-color: #333;
        color: white;
        padding: 1em;
        display: flex;
        justify-content: center;
      }

      nav ul {
        list-style: none;
        display: flex;
      }

      nav ul li {
        margin: 0 1em;
      }

      nav ul li a {
        color: white;
        text-decoration: none;
        font-weight: bold;
      }

      nav ul li a:hover {
        text-decoration: underline;
      }

      .container {
        max-width: 800px;
        margin: 2em auto;
        padding: 2em;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      h1 {
        font-size: 2.5em;
        margin-bottom: 1em;
        color: #333;
        text-align: center;
      }
      img {
        display: block;
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1em 0;
      }

      p {
        font-size: 1.1em;
        line-height: 1.6;
        color: #555;
      }

      .mt-4 {
        margin-top: 2em;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img
        src="<%= blog.coverImageURL %>"
        alt="Image"
        width="800px"
        height="400"
      />
      <p><%= blog.body %></p>
    </div>

    <%- include("./partials/scripts.ejs") %>
  </body>
</html>
